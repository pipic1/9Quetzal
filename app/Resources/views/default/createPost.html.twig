{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">
        <div class="col-md-6 col-md-offset-3">
            <h1><span>Create your new post</span> here</h1>

            {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.title) }}
                {{ form_widget(form.title,{ 'attr': {'class': 'form-control', 'placeholder': 'Title of the post' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.img) }}
                {{ form_widget(form.img,{ 'attr': {'class': 'form-control', 'placeholder': 'form.img'|trans, 'style':'height:auto;' } }) }}
            </div>
            <div class="form-group">
                {{ form_label(form.save) }}
                {{ form_widget(form.save, { 'attr': {'class': 'btn btn-primary  btn-sm'} }) }}
            </div>

            {{ form_rest(form) }}
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
